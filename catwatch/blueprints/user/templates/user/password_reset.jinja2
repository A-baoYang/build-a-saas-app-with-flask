{% extends 'layouts/login.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}Enter a new password{% endblock %}

{% block body %}
  <div class="g--half g--centered">
    <div class="login--background">
      {% call f.form_tag('user.password_reset', class='clear') %}
        <legend class="centered medium bottom-margin">Enter a new password
        </legend>
        {{ f.field(form.password, placeholder='Password', autofocus='autofocus') }}

        <div class="g--full">
          <button type="submit" class="full-width rounded button--primary">
            Continue
          </button>
        </div>
      {% endcall %}
    </div>
  </div>
{% endblock %}
